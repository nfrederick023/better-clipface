{
  "compilerOptions": {
    "target": "ES6",
    "types": [
      "node"
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "jsx": "preserve",
    "resolveJsonModule": true
  },
  "include": [
    "./src",
    "e2e",
  ],
  "exclude": [
    "node_modules"
  ]
}